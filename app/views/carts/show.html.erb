
<div class="pointer-events-auto w-screen max-w-md">
    <div class="flex h-full flex-col overflow-y-scroll bg-white shadow-xl">
    <div class="flex-1 overflow-y-auto px-4 py-6 sm:px-6">
        <div class="flex items-start justify-between">
        <h2 class="text-lg font-medium text-gray-900" id="slide-over-title">Shopping cart</h2>
        </div>

        <div class="mt-8">
        <div class="flow-root">
            <ul role="list" class="-my-6 divide-y divide-gray-200">
            <% @cart.line_items.each do |line_item| %>
                <li class="flex py-6">
                <div class="h-24 w-24 flex-shrink-0 overflow-hidden rounded-md border border-gray-200">
                        <% if line_item.product.image.attached? %>
                            <img src="<%= url_for(line_item.product.image) %>" class= "h-full w-full object-cover object-center lg:h-full lg:w-full">
                        <% end %>
                </div>

                <div class="ml-4 flex flex-1 flex-col">
                    <div>
                    <div class="flex justify-between text-base font-medium text-gray-900">
                        <h3>
                        <a href="#"><%= line_item.product.name %></a>
                        </h3>
                        <p class="ml-4">$<%= total_price(line_item) %></p>
                    </div>
                    </div>
                    <div class="flex flex-1 items-end justify-between text-sm">
                    <p class="text-gray-500">Qty <%= line_item.quantity %></p>

                    <div>
                        <%= button_to "Add", add_item_path(line_item.product), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
                        <%= button_to "Remove", remove_item_path(line_item.product), class: "font-medium text-indigo-600 hover:text-indigo-500"   %>
                    </div>
                    </div>
                </div>
                </li>
            <% end%>

            <!-- More products... -->
            </ul>
        </div>
        </div>
    </div>

    <div class="border-t border-gray-200 px-4 py-6 sm:px-6">
        <div class="flex justify-between text-base font-medium text-gray-900">
        <p>Subtotal</p>
        <p>$<%= cart_total_price(@cart) %></p>
        </div>
        <p class="mt-0.5 text-sm text-gray-500">Shipping and taxes calculated at checkout.</p>
        <div class="mt-6">
        <a href="<%= new_order_path %>" class="flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-6 py-3 text-base font-medium text-white shadow-sm hover:bg-indigo-700">Checkout</a>
        </div>
        <div class="mt-6 flex justify-center text-center text-sm text-gray-500">
        <p>
            <%= button_to "Continue Shopping", products_path , class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </p>
        </div>
    </div>
    </div>
</div>

